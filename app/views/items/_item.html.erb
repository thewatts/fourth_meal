<%= div_for(item, class:"tile grid-33") do %>

  <% if Rails.env == "production" %>
    <img src="/assets/<%= item.photo_file_name %>" class="item-image" height="200" width="200">
  <% else %>
    <%= image_tag item.photo.url, class:"item-image", height:200, width:200 %>
  <% end %>

  <%= form_for current_order, url: order_path(session[:current_restaurant], current_order) do |f| %>
    <h2 class="tile-title">
      <%= item.title %>
    </h2>
    <p class="tile-details"><%= item.description %></p>
    <p class="tile-details"><%= number_to_currency(item.price) %></p>

    <%= hidden_field_tag :item, item.id %>
    <%= f.submit "Add to Cart", class:'button-small add-to-cart' %>
  <% end %>
<% end %>

